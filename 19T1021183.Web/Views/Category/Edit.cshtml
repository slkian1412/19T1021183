@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus value="@Model.CategoryName" name="CategoryName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Description" name="Description">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Danh mục:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="ParentCategoryId">
                        <option>--chọn danh mục--</option>

                        @foreach (var item in _19T1021183.BusinessLayers.CommonDataService.ListOfCategories())
                        {
                            if (item.ParentCategoryId == Model.ParentCategoryId)
                            {
                                <option value="@item.ParentCategoryId" selected>@item.ParentCategoryId</option>
                            }
                            else
                            {
                                <option value="@item.ParentCategoryId">@item.ParentCategoryId</option>
                            }
                        }

                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Category/" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
