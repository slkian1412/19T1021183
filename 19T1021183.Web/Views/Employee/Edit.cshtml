@model _19T1021183.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post">
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="LastName" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="BirthDate" value="@Model.BirthDate">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh</label>
                <div class="col-sm-10">
                    <img src="@Model.Photo" style="width:50px;height:50px">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Notes" value="@Model.Notes">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Email" value="@Model.Email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Photo">Thay đổi ảnh</label>
                <div class="col-sm-10">
                    <input type="file" name="Photo" value="@Model.Photo">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o "></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

